{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./packages",
    "module": "esnext",
    "noUnusedLocals": true,        
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,  
    "paths": {
      "app/*": ["./packages/app/*"],
      "design-system/*": ["./packages/design-system/*"],
      "@/*": ["./apps/next/*"]   
    },
    "jsx": "react-jsx"
  },
  "extends": "expo/tsconfig.base"
}
