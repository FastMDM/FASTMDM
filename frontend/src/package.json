{
  "name": "solito-with-tailwind",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-native": "0.72.8",
    "eslint": "^8.21.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "start": "cd apps/expo && npx expo start",
    "android": "cd apps/expo && npx expo run:android",
    "ios": "cd apps/expo && rm -r ios && npx expo run:ios ",
    "web": "cd apps/next && yarn next",
    "build:next": "cd apps/next && yarn build",
    "resetcache": "yarn start --reset-cache"
  },
  "resolutions": {
    "metro": "~0.76.7",
    "metro-resolver": "~0.76.7",
    "react-native-reanimated": "3.6.0",
    "expo-constants": "15.4.1"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "packageManager": "yarn@3.4.1"
}
